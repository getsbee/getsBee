{
  "manifest_version": 3,
  "name": "FrequencyOf",
  "description": "Counts the number of words in the body text of any webpage",
  "version": "1.0",
  "action": {
    "default_popup": "index.html",
    "default_icon": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["activeTab", "scripting", "storage"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "data.js",
        "content.js",
        "highlight.js",
        "constant.js",
        "api.js",
        "validation.js"
      ],
      "css": ["getsBeeCustom.css"],
      "type": "module"
    }
  ],
  "content_security_policy": {
    "script-src": "'self' 'https://unpkg.com'",
    "object-src": "'self'"
  }
}
